{
  "extends": ["airbnb"],
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "react/no-unknown-property": ["error", { "ignore": ["class", "for"] }],
    "no-underscore-dangle": "off"
  },
  "settings": {
    "import/resolver": {
      "webpack": { "config": "webpack/common.config.js" }
    },
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    }
  }
}